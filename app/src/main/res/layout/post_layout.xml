<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fab="http://schemas.android.com/tools"
    cardview:cardElevation="2dp"
    cardview:cardMaxElevation="2dp"
    android:id="@+id/cv"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    cardview:contentPadding="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    cardview:cardCornerRadius="2dp">
    <ImageButton
        android:id="@+id/downloadbutton"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="top|right"
        android:layout_margin="10dp"
        android:src="@drawable/downloadfinal2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action"
            android:id="@+id/uploaderdp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/uploaderdp"
            android:id="@+id/frame1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uploaderName"
                android:paddingTop="7dp"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:text="Name"
                />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discription"

            android:layout_below="@+id/frame1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="Description"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/uploadedImage"
            android:src="@drawable/demo"
            android:layout_below="@+id/discription"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_below="@+id/uploadedImage"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/grey_200"
            android:id="@+id/likecommentbox">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="Like"
                android:drawableRight="@drawable/like"
                android:gravity="center"
                android:id="@+id/likebutton"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:text="Comment"
                android:drawableRight="@drawable/comment"
                android:gravity="center"
                android:id="@+id/commentbutton"
                style="?android:attr/borderlessButtonStyle" />

            <!--<Button-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="match_parent"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="Download"-->
            <!--android:gravity="center"-->
            <!--android:drawableLeft="@drawable/ic_action"-->
            <!--android:id="@+id/downloadbutton"-->
            <!--style="?android:attr/borderlessButtonStyle"/>-->

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </FrameLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>